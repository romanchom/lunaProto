namespace luna.proto;

enum ColorChannels : byte {
  none = 0,
  red = 1,
  green = 2,
  blue = 4,
  white = 8,
}

struct UV {
  u:float;
  v:float;
}

struct ColorSpace {
  white:UV;
  red:UV;
  green:UV;
  blue:UV;
}

struct Point {
  x:float;
  y:float;
  z:float;
}

struct Strand {
  id:byte;
  channels:ColorChannels;
  pixelCount:short;
  begin:Point;
  end:Point;
  colorSpace:ColorSpace;
}

table Discovery {
  port:uint16;
  name:string;
  strands:[Strand];
}

root_type Discovery;
